@using ProductCatalog.BL;
@model ProductsAddVM
@{
    List<SelectListItem> categories = ViewData["Categories"] as List<SelectListItem> ?? new();
}

<h3 class="text-center">Add New Products</h3>

<form asp-action="AddProduct" method="post">
    <div class="form-group mb-2">
        <label asp-for="productName">Product Name</label>
        <input asp-for="productName" class="form-control" />
        <span class="text-danger" asp-validation-for="productName"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" class="form-control" />
        <span class="text-danger" asp-validation-for="StartDate"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control" />
        <span class="text-danger" asp-validation-for="Duration"></span>
    </div>
    <div class="form-group mb-2">
        <label class="col-12 col-form-label" asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="categories"></select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>
    

    <div class="d-flex justify-content-center">
        <button class="btn btn-primary">Add Product</button>
    </div>
</form>